                <div class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <%= render @view_module, @view_template, assigns %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- /container -->
        <script src="<%= static_path(@conn, "/js/admin.js") %>"></script>
